<widgets>
    <carousel_list type="carousel/list" translate="name description" module="carousel">
        <name>Carousel</name>
        <description>Aşağıdaki listeden carousel seçiniz</description>
        <parameters>
            <enabled_services>
                <label>Carousel</label>
                <visible>1</visible>
                <required>1</required>
                <type>multiselect</type>
                <source_model>carousel/services</source_model>
            </enabled_services>
            <products_count translate="label">
                <required>1</required>
                <visible>1</visible>
                <value>12</value>
                <label>Ürün Adedi</label>
                <type>text</type>
            </products_count>
            <featured_category translate="label">
                <required>0</required>
                <visible>1</visible>
                <value>4</value>
                <label>Seçtiklerimiz bölümü için kategori id</label>
                <type>text</type>
            </featured_category>
            <timer translate="label">
                <required>1</required>
                <visible>1</visible>
                <value>6000</value>
                <label>bekleme süresi (milisaniye)</label>
                <type>text</type>
            </timer>
            <template translate="label">
                <label>Tip</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <values>
                    <carousel1 translate="label">
                        <value>carousel/carousel.phtml</value>
                        <label>Carousel</label>
                    </carousel1>
                </values>
            </template>
        </parameters>
    </carousel_list>
</widgets>
