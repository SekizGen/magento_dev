<config>
    <sections>
        <sekizgen_randevu translate="label" module="sekizgen_randevu">
            <label>Appointment</label>
            <tab>catalog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <randevu translate="label">
                    <label>Appointment Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Adding Appointment Custom Option</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>

                        <attributeset translate="label">
                            <label>Enabled Attribute Sets</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>sekizgen_randevu/system_config_source_attributeset</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </attributeset>

                        <updateallproducts translate="label">
                            <label>Update All Products</label>
                            <frontend_type>button</frontend_type>
                            <frontend_model>sekizgen_randevu/Updateallproductsbutton</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </updateallproducts>
                        
                    </fields>
                </randevu>
            </groups>
        </sekizgen_randevu>
    </sections>
</config>
